<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:background="@color/card_div_gray"/>

    <android.support.v7.widget.CardView
        android:id="@+id/navig_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_tab_height"
            android:background="@color/white"
            android:baselineAligned="false">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_tab"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/home_tab_icon_size"
                android:layout_height="@dimen/home_tab_icon_size"
                app:srcCompat="@drawable/ic_home_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:visibility="invisible"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/home_tab_icon_dash_line"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projects_tab"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/home_tab_icon_size"
                    android:layout_height="@dimen/home_tab_icon_size"
                    android:src="@drawable/project_management"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:gravity="center"
                    android:text="Projects"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:visibility="invisible"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/home_tab_icon_dash_line"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notification_tab"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/home_tab_icon_size"
                    android:layout_height="@dimen/home_tab_icon_size"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:visibility="invisible"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/home_tab_icon_dash_line"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_tab"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/home_tab_icon_size"
                    android:layout_height="@dimen/home_tab_icon_size"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:visibility="invisible"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/home_tab_icon_dash_line"/>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>